<?xml version="1.0" encoding="utf-8"?>
<StackLayout xmlns:ohos="http://schemas.huawei.com/res/ohos"
    xmlns:app="http://schemas.huawei.com/res-auto"
    xmlns:tools="http://schemas.huawei.com/tools"
    ohos:background_element="#ffffff"
